# This file is generated by chezmoi.
# Define data.gitIdentityByProfile in ~/.config/chezmoi/chezmoi.toml.
{{- $profile := default "personal" .profile -}}
{{- $identity := index (default (dict) .gitIdentityByProfile) $profile -}}
{{- if $identity }}
{{- $name := index $identity "name" -}}
{{- $email := index $identity "email" -}}
{{- if and $name $email }}
export GIT_AUTHOR_NAME="{{ $name }}"
export GIT_AUTHOR_EMAIL="{{ $email }}"
export GIT_COMMITTER_NAME="{{ $name }}"
export GIT_COMMITTER_EMAIL="{{ $email }}"
{{- end }}
{{- end }}
