{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/gpt-5.1-codex",
  "small_model": "opencode/gpt-5.1-codex-mini",
  "plugin": [
    "opencode-openai-codex-auth"
  ],
  "permission": {
    "external_directory": {
      "~/dev/zingbang/**": "allow"
    }
  },
  "mcp": {
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp",
      "enabled": true
    }
  },
  "agent": {
    "build": {
      "model": "opencode/gpt-5.1-codex",
      "reasoningEffort": "medium",
      "reasoningSummary": "auto",
      "textVerbosity": "medium",
      "steps": 50
    },
    "plan": {
      "model": "opencode/qwen3-coder",
      "steps": 15
    },
    "explore": {
      "model": "opencode/gemini-3-flash",
      "steps": 20
    },
    "compaction": {
      "model": "opencode/gpt-5.1-codex-mini"
    },
    "title": {
      "model": "opencode/gpt-5-nano"
    },
    "draft": {
      "description": "Quick prototyping and boilerplate with cheaper model. Use for initial scaffolding, simple utilities, or when you want to iterate fast before switching to build agent for final implementation.",
      "mode": "subagent",
      "model": "opencode/qwen3-coder",
      "tools": {
        "write": true,
        "edit": true,
        "bash": false
      },
      "steps": 10
    },
    "review": {
      "description": "Code review and analysis with read-only access. Use for security audits, performance analysis, or getting a second opinion on code quality.",
      "mode": "subagent",
      "model": "opencode/gemini-3-flash",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      },
      "steps": 10
    }
  },
  "provider": {
    "openai": {
      "options": {
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "textVerbosity": "medium",
        "include": [
          "reasoning.encrypted_content"
        ],
        "store": false
      },
      "models": {
        "gpt-5.2": {
          "name": "GPT 5.2 (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            }
          }
        },
        "gpt-5.3-codex": {
          "name": "GPT 5.3 Codex (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "quick": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "low"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "deep": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "low"
            }
          }
        },
        "gpt-5.2-codex": {
          "name": "GPT 5.2 Codex (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            }
          }
        },
        "gpt-5.1-codex": {
          "name": "GPT 5.1 Codex (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            }
          }
        }
      }
    },
    "opencode": {
      "models": {
        "glm-5": {
          "variants": {
            "fast": {
              "temperature": 0.3
            },
            "precise": {
              "temperature": 0.1
            }
          }
        }
      }
    }
  }
}
